<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="summary_name" parent="AppTheme">
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="summary_item" parent="AppTheme">
        <item name="android:color">@android:color/black</item>
    </style>
    <style name="detail_name" parent="AppTheme">
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="detail_label" parent="AppTheme">
        <item name="android:color">@android:color/black</item>

    </style>
    <style name="detail_price_template" parent="AppTheme">
        <item name="android:color">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="detail_comment" parent="AppTheme">
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
</resources>
