<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingTop="@dimen/medium_padding">

    <ImageView
        android:id="@+id/image_id"
        android:layout_width="@dimen/summary_image_width"
        android:layout_height="@dimen/summary_image_height"
        android:scaleType="centerCrop"
        android:paddingRight="@dimen/medium_padding"

        android:src="@drawable/attraction_1_colosseum" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/medium_padding"
        >

        <TextView
            android:id="@+id/name_id"
            style="@style/summary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Coloscium" />

        <TextView
            android:id="@+id/style_id"
            style="@style/summary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Italian" />

        <TextView
            android:id="@+id/description_id"
            style="@style/summary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="blah blah blah blah blah" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/price_id"
                style="@style/summary_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="$$$" />

            <TextView
                android:id="@+id/rating_id"
                style="@style/summary_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:hint="5.0 of 5.0" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
