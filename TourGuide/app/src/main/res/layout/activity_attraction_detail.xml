<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttractionDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_image_id"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:src="@drawable/attraction_1_colosseum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/detail_name_id"
                style="@style/detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="myName" />

            <TextView
                android:id="@+id/detail_style_id"
                style="@style/detail_price_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="italian" />

            <TextView
                style="@style/detail_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/detail_label" />

            <TextView
                android:id="@+id/detail_description_id"
                style="@style/detail_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="my description is here" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:id="@+id/detail_action_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_phone_black_24dp" />

                <TextView
                    android:id="@+id/detail_phone_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Phone number"
                    android:paddingLeft="2dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:id="@+id/detail_action_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:src="@drawable/baseline_directions_black_24dp" />

                <TextView
                    android:id="@+id/detail_address_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="address"
                    android:paddingLeft="2dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <View
                android:id="@+id/detail_yelp_separator"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:id="@+id/detail_action_yelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/yelp_burst_positive_rgb" />

                <TextView
                    android:id="@+id/detail_yelp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="@string/yelp_label"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/detail_rating_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="5.0 of 5.0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/detail_price_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="$$$"
                    android:textColor="@android:color/black" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>