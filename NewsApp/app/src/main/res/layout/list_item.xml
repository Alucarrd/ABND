<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<TextView
    android:id="@+id/item_section_name_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:hint="Section Name"
    android:text="Section Name: "/>
    <TextView
        android:id="@+id/item_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/item_section_name_label"
        app:layout_constraintBottom_toBottomOf="@+id/item_section_name_label"
        android:hint="My Section Name"
   />
     <TextView
           android:id="@+id/item_title_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/item_section_name_label"
           android:hint="Article Title"
           android:text="Title: "/>
         <TextView
             android:id="@+id/item_title"
             android:layout_width="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/item_section_name_label"
             app:layout_constraintLeft_toRightOf="@+id/item_title_label"
             android:layout_height="wrap_content"
             android:hint="Article title starts here"
            />
        <TextView
             android:id="@+id/item_contributor_label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_title_label"
             android:hint="Contributor(s): "
             android:text="Contributor(s): "/>
         <TextView
             android:id="@+id/item_contributor"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/item_title_label"
             app:layout_constraintLeft_toRightOf="@+id/item_contributor_label"
             android:hint="My name is hoho" />
         <TextView
             android:id="@+id/item_publication_label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/item_contributor_label"
             android:hint="Publication Date: "
             android:text="Publication Date: "/>
         <TextView
             android:id="@+id/item_publication"

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/item_contributor_label"
             app:layout_constraintLeft_toRightOf="@+id/item_publication_label"
             android:hint="08/20/2018" />

</android.support.constraint.ConstraintLayout>